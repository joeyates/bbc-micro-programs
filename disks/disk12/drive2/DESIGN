   10DIMA(8,8),A$(2),S(4)
   20MODE 4
   25INPUT"Char :"C%
   27INPUT"Other :"A$:D%=ASC(A$)
   30VDU 23,255,&FFFF;&FFFF;&FFFF;&FFFF;
   40A$(1)=" ":A$(2)=CHR$(255)
   50FOR I=1 TO 8:FOR J=1 TO 8
   60A(I,J)=1
   70NEXT J,I
   90PRINTTAB(20,20);:INPUTX,Y
  100A(X,Y)=3-A(X,Y)
  110CLS
  115S(1)=0:S(2)=0:S(3)=0:S(4)=0
  120FOR J=1 TO 8
  123D=INT((J+1)/2)
  130FOR I=1 TO 8
  140PRINTTAB(I+2,J+2);A$(A(I,J))
  160S(D)=S(D)+(A(I,J)-1)*2^((8-I)+(1-(J MOD 2))*8)
  170NEXT I
  180PRINTTAB(13,J+2);S(D)
  190PRINTTAB(J+2,2);J;TAB(J+2,11);J
  200PRINTTAB(2,J+2);J;TAB(11,J+2);J
  210NEXT J
  215VDU23,C%,S(1);S(2);S(3);S(4);
  217PRINTTAB(13,12);
  218FORI=1TO5:VDUD%,C%:NEXTI
  220GOTO90
  230FORJ=1TO8:FORI=8 TO1STEP-1
  240PRINT I;"  ";J;"  ";INT((J+1)/2);"  ";2^((8-I)+(1-(J MOD 2))*8)
  250NEXTI,J
  260MODE 7
